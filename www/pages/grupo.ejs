<%- include('template/header'); -%>
<nav class="navbar navbar-dark bg-dark">
    <a href="#" onclick="history.go(-1)" class="navbar-brand navbar-text">Atras</a>

    <span class="navbar-brand  mb-0 h1">Grupos</span>
</nav>


<div class="container">
        <div class="row" style="margin-top:1em;">
                <div class="col-md-5">
                        <div class="card">
                            <div class="card-body">
                                
                                    <form id="form_grupo" style="margin-top: 1em; margin-bottom: 1em;">
                                            <div class="form-group">
                                              <label>Nombre</label>
                                              <input type="text" name="nombre" class="form-control">
                                            </div>
                                            </form>
                            </div>
                               
                                </div>
                                </div>
                                <div class="col-md-7">
                                        <table class="table table-bordered table-hover">
                                            <thead>
                                                <tr>
                                                    <th>N</th>
                                                    <th>Nombre</th>
                                                    <th></th>
                                               </tr>
                                                    </thead>
                                                <tbody>
                                                        <% for(var i=0; i<query.length; i++){ %>
            
                                        <tr>
                                                <td><%= i + 1 %></td>
                                                <td><%= query[i].nombre %></td>
                                                <td ><a href="/eliminargrupo/<%= query[i]._id %>" class="btn btn-danger" style="margin-left: 1em;">Eliminar</a></td>
            
                                        </tr>
                                        <% } %>
            
                                                </tbody>
                                        </table> 
                                                    </div>



        <button type="button" onclick="registrar_grupo()" class="btn btn-primary btn-block">Guardar</button>

</div>
<script>

    registrar_grupo= () => {
            $.ajax({
            url:'/grupo',
            method:'post',
            data:$('#form_grupo').serialize(),
            success:(data)=>{
                    alert(data.message);
                    location.reload();
            },
            error:(err)=>{
    
            }
    });
    }
    
    </script>
<%- include('template/footer'); -%>
